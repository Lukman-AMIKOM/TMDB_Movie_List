<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TMDBMovieList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/list_background_color_night</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>
    
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/list_text_color_overview</item>
    </style>
    
    <style name="ToolbarTheme.Colored">
        <item name="android:homeAsUpIndicator">@drawable/ic_search_collapse_night</item>
    </style>
    
    <style name="ToolbarBackground">
        <item name="android:background">@color/toolbar_color_night</item>
    </style>
    
    <style name="ToolbarTheme.List">
        <item name="android:background">@color/list_background_color_night</item>
    </style>
    
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/bg_search_view_night</item>
        <item name="closeIcon">@drawable/ic_close_night</item>
        <item name="searchIcon">@drawable/ic_search_night</item>
        <item name="goIcon">@drawable/ic_search_night</item>
        <item name="searchHintIcon">@drawable/ic_search_night</item>
    </style>
    
    <style name="MainSorterSpinnerItems">
        <item name="android:background">@color/list_background_color_night</item>
    </style>
    
    <style name="MainSorterSpinnerItemsText">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="MainSorterSpinnerItemsText.ItemRow">
        <item name="android:background">@drawable/ripple_spinner_item_night</item>
    </style>
    
    <style name="MainSorterSpinnerArrow">
        <item name="android:src">@drawable/ic_spinner_arrow_night</item>
        <item name="android:background">@drawable/ripple_spinner_arrow_night</item>
    </style>
    
    <style name="MainTab">
        <item name="tabBackground">@drawable/bg_main_tab_night</item>
        <item name="tabIndicatorColor">#292929</item>
        <item name="tabSelectedTextColor">#292929</item>
        <item name="tabIconTint">@color/selector_tab_title_night</item>
        <item name="tabTextColor">#DBDBDB</item>
    </style>
    
    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>
    
    <style name="TabLayoutTextAppearance.Colored">
        <item name="android:textColor">@color/selector_tab_title_night</item>
    </style>
    
    <style name="MainRecyclerView">
        <item name="android:background">#8A8A8A</item>
    </style>
    
    <style name="ListItemBackground">
        <item name="android:background">@drawable/ripple_list_item_night</item>
    </style>
    
    <style name="GridItemBackground">
        <item name="android:background">@drawable/ripple_grid_item_night</item>
    </style>
    
    <style name="ListTextView.Title.Colored">
        <item name="android:textColor">@color/orange</item>
    </style>
    
    <style name="ListTextView.Detail.SorterTitle">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="ListTextView.Detail.Specification">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="ListTextView.Detail.Specification.Colored">
        <item name="android:background">@drawable/bg_list_specification_night</item>
        <item name="android:textColor">#303030</item>
    </style>
    
    <style name="ListTextView.Detail.Overview">
        <item name="android:textColor">#D9D9D9</item>
    </style>
    
    <style name="ListTextView.Detail.DetailPage">
        <item name="android:textColor">#DBDBDB</item>
    </style>
    
    <style name="ListTextView.Detail.DetailPage.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="ListTextView.Detail.GridSpecification">
        <item name="android:textColor">@null</item>
        <item name="android:background">@drawable/bg_detail_spec_border_night</item>
    </style>
    
    <style name="DetailConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_bottom_border_colored_toolbar_night</item>
    </style>
    
    <style name="DetailConstraintLayoutStyle.Toolbar">
        <item name="android:background">@color/toolbar_color_night</item>
    </style>
    
    <style name="DetailConstraintLayoutStyle.ToolbarList">
        <item name="android:background">@color/list_background_color_night</item>
    </style>
    
    <style name="ListTextView.Detail.DetailPage.Bordered">
        <item name="android:background">@drawable/bg_detail_spec_border_night</item>
        <item name="android:textColor">@color/orange</item>
    </style>
    
    <style name="ListTextView.Detail.Rating">
        <item name="android:textColor">@color/orange</item>
    </style>
    
    <style name="DetailPageBackground">
        <item name="android:background">@color/toolbar_color_night</item>
    </style>
    
    <style name="DetailRecyclerView.Colored">
        <item name="android:background">@drawable/bg_bottom_border_night</item>
    </style>
    
    <style name="DetailContentsBackground">
        <item name="android:background">@drawable/bg_list_detail_night</item>
    </style>
    
    <style name="ListTextView.Detail.CrewContent">
        <item name="android:textColor">@color/selector_detail_list_crew_night</item>
    </style>
    
    <style name="GridCastRecyclerViewBackground">
        <item name="android:background">@drawable/bg_bottom_border_colored_night</item>
    </style>
    
    <style name="ListTextView.Detail.GridCast.Name">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ListTextView.Detail.GridCast.Character">
        <item name="android:textColor">#DBDBDB</item>
    </style>
    
    <style name="FilmographyRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_bottom_border_colored_night</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
    
    <style name="YearGroupRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_bottom_border_night</item>
    </style>
    
    <style name="ListCreditItemsBackground">
        <item name="android:background">@drawable/bg_list_credit_items_night</item>
    </style>
    
    <style name="AboutBackground">
        <item name="android:background">@drawable/bg_fragment_about_night</item>
    </style>
    
    <style name="AboutToolbarBackground">
        <item name="android:background">@color/toolbar_color_night</item>
    </style>
    
    <style name="AboutProfilePhoto">
        <item name="civ_shadow_color">@color/toolbar_color_night</item>
    </style>
    
    <style name="AboutTextView.Colored">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>