<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TMDBMovieList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/status_bar_color</item>
        <item name="colorPrimaryVariant">@color/list_text_color_overview</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>
    
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@color/toolbar_color_night</item>
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/list_text_color_overview</item>
    </style>
    
    <style name="ToolbarTheme.Colored">
        <item name="android:homeAsUpIndicator">@drawable/ic_search_collapse</item>
    </style>
    
    <style name="ToolbarBackground">
        <item name="android:background">@color/toolbar_color</item>
    </style>
    
    <style name="ToolbarTheme.List">
        <item name="android:background">@color/toolbar_color</item>
    </style>
    
    <style name="ToolbarTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/bg_search_view</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="goIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
    </style>
    
    <style name="MainSorterSpinnerItems">
        <item name="android:background">@color/list_background_color</item>
    </style>
    
    <style name="MainSorterSpinnerItemsText">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="MainSorterSpinnerItemsText.ItemRow">
        <item name="android:background">@drawable/ripple_spinner_item_row</item>
    </style>
    
    <style name="MainSorterSpinnerArrow">
        <item name="android:src">@drawable/ic_spinner_arrow</item>
        <item name="android:background">@drawable/ripple_spinner_arrow</item>
    </style>
    
    <style name="MainTab">
        <item name="tabBackground">@drawable/bg_main_tab</item>
        <item name="tabIndicatorColor">#292929</item>
        <item name="tabSelectedTextColor">#292929</item>
        <item name="tabIconTint">@color/selector_tab_title</item>
        <item name="tabTextColor">@color/list_background_color_night</item>
    </style>
    
    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>
    
    <style name="TabLayoutTextAppearance.Colored">
        <item name="android:textColor">@color/selector_tab_title</item>
    </style>
    
    <style name="MainRecyclerView">
        <item name="android:background">@color/list_background_color</item>
    </style>
    
    <style name="ListItemBackground">
        <item name="android:background">@drawable/ripple_list_item</item>
    </style>
    
    <style name="GridItemBackground">
        <item name="android:background">@drawable/ripple_grid_item</item>
    </style>
    
    <style name="RoundedCornersImageView">
        <item name="cornerFamily">rounded</item>
    </style>
    
    <style name="RoundedCornersImageView.List">
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <style name="RoundedCornersImageView.Grid">
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <style name="ListTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    
    <style name="ListTextView.Title">
        <item name="android:fontFamily">@font/quantico</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ListTextView.Title.Colored">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="ListTextView.Detail">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="ListTextView.Detail.SorterTitle">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="ListTextView.Detail.Specification">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="ListTextView.Detail.Specification.Colored">
        <item name="android:background">@drawable/bg_list_specification</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="ListTextView.Detail.Overview">
        <item name="android:textColor">@color/list_text_color_overview</item>
    </style>
    
    <style name="ListTextView.Detail.DetailPage">
        <item name="android:textColor">@color/list_text_color</item>
    </style>
    
    <style name="ListTextView.Detail.DetailPage.Title">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ListTextView.Detail.GridSpecification">
        <item name="android:textColor">@color/list_text_color</item>
        <item name="android:background">@drawable/bg_detail_spec_border</item>
    </style>
    
    <style name="DetailConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_bottom_border_colored</item>
    </style>
    
    <style name="DetailConstraintLayoutStyle.Toolbar">
        <item name="android:background">@color/list_background_color</item>
    </style>
    
    <style name="DetailConstraintLayoutStyle.ToolbarList">
        <item name="android:background">@color/list_background_color</item>
    </style>
    
    <style name="ListTextView.Detail.DetailPage.Bordered">
        <item name="android:background">@drawable/bg_detail_spec_border</item>
    </style>
    
    <style name="ListTextView.Detail.Rating">
        <item name="android:textColor">@color/list_text_color</item>
    </style>
    
    <style name="ListTextView.Detail.Tagline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="ListTextView.Detail.GridSpec">
        <item name="android:textColor">@color/list_text_color</item>
        <item name="android:background">@drawable/bg_detail_spec_border</item>
    </style>
    
    <style name="DetailPageBackground">
        <item name="android:background">@color/list_background_color</item>
    </style>
    
    <style name="DetailRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
    
    <style name="DetailRecyclerView.Colored">
        <item name="android:background">@drawable/bg_bottom_border</item>
    </style>
    
    <style name="DetailContentsBackground">
        <item name="android:background">@drawable/bg_list_detail</item>
    </style>
    
    <style name="ListTextView.Detail.CrewContent">
        <item name="android:textColor">@color/selector_detail_list_crew</item>
    </style>
    
    <style name="GridCastRecyclerViewBackground">
        <item name="android:background">@drawable/bg_bottom_border_colored</item>
    </style>
    
    <style name="ListTextView.Detail.GridCast">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="ListTextView.Detail.GridCast.Name">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ListTextView.Detail.GridCast.Character">
        <item name="android:textColor">@color/list_text_color</item>
    </style>
    
    <style name="ImageViewSocialMedia">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    
    <style name="FilmographyRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_bottom_border</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
    
    <style name="YearGroupRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_bottom_border</item>
    </style>
    
    <style name="ListCreditItemsBackground">
        <item name="android:background">@drawable/bg_list_credit_items</item>
    </style>
    
    <style name="MainSorterLayout">
        <item name="android:background">@color/list_background_color</item>
    </style>
    
    <style name="MainSorterTitle">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="AboutBackground">
        <item name="android:background">@drawable/bg_fragment_about</item>
    </style>
    
    <style name="AboutToolbarBackground">
        <item name="android:background">@color/list_background_color</item>
    </style>
    
    <style name="AboutProfilePhoto">
        <item name="civ_shadow_color">#3F51B5</item>
    </style>
    
    <style name="AboutTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="AboutTextView.Colored">
        <item name="android:textColor">#545b61</item>
    </style>
    
    <style name="AboutTextView.Colored.Name">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="fontFamily">@font/quantico</item>
    </style>
    
    <style name="AboutTextView.Colored.SchoolInfo">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="fontFamily">@font/quantico</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>